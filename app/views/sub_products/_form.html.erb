<%= form_with model: [ @product, @subproduct] do |form| %>
  <p>
    <%= form.label :company_name, "Company Name" %><br>
    <%= form.text_field :company_name %>
  </p>
  <p>
    <%= form.label :Description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :Price %><br>
    <%= form.number_field :price %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
